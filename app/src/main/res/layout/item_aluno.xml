<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/raAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RA: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/nomeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Aluno"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/cepAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEP"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/logradouroAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logradouro"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/complementoAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complemento"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bairroAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bairro"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/cidadeAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/ufAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UF"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>