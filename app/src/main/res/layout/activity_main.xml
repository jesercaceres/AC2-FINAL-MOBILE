<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/edtRa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RA"
                android:inputType="text"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Aluno"
                android:inputType="text"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edtCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CEP"
                android:inputType="number"
                android:maxLength="8"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/edtLogradouro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Logradouro"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryLight"/>

            <EditText
                android:id="@+id/edtComplemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Complemento"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryLight"/>

            <EditText
                android:id="@+id/edtBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bairro"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryLight"/>

            <EditText
                android:id="@+id/edtCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryLight"/>

            <EditText
                android:id="@+id/edtUf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UF"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorPrimaryLight"/>

            <Button
                android:id="@+id/btnCadastrarAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Aluno"
                android:backgroundTint="@color/colorAccent"/>

            <Button
                android:id="@+id/btnVerAlunos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Alunos Cadastrados"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>